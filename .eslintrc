{
  "rules": {
    "array-bracket-spacing":       [ 2, "always" ],
    "block-spacing":               [ 2, "always" ],
    "brace-style":                 [ 2, "1tbs" ],
    "camelcase":                   [ 2, { "properties": "never" } ],
    "comma-spacing":               [ 2, { "before": false, "after": true } ],
    "consistent-this":             [ 2, "self" ],
    "curly":                       [ 2, "all" ],
    "eol-last":                    2,
    "eqeqeq":                      [ 2, "allow-null" ],
    "handle-callback-err":         [ 2, "^err(or)?" ],
    "indent":                      [ 2, 2 ],
    "linebreak-style":             [ 2, "unix" ],
    "new-cap":                     2,
    "new-parens":                  2,
    "no-console":                  0,
    "no-eq-null":                  2,
    "no-eval":                     2,
    "no-floating-decimal":         2,
    "no-lone-blocks":              2,
    "no-lonely-if":                2,
    "no-loop-func":                2,
    "no-multi-spaces":             2,
    "no-multi-str":                2,
    "no-multiple-empty-lines":     [ 2, {"max": 1} ],
    "no-nested-ternary":           2,
    "no-return-assign":            2,
    "no-self-compare":             2,
    "no-sequences":                2,
    "no-shadow-restricted-names":  2,
    "no-shadow":                   2,
    "no-spaced-func":              2,
    "no-throw-literal":            2,
    "no-trailing-spaces":          2,
    "no-undefined":                2,
    "no-unexpected-multiline":     2,
    "no-unneeded-ternary":         2,
    "no-unused-expressions":       2,
    "no-use-before-define":        0,
    "no-useless-concat":           2,
    "no-void":                     2,
    "no-warning-comments":         [ 0, { "terms": [ "todo", "fixme", "xxx" ], "location": "anywhere" } ],
    "no-with":                     2,
    "object-curly-spacing":        [ 2, "always" ],
    "one-var":                     [ 2, "never" ],
    "quotes":                      [ 2, "single" ],
    "radix":                       2,
    "semi":                        [ 2, "always" ],
    "semi-spacing":                [ 2, { "before": false, "after": true } ],
    "keyword-spacing":             2,
    "space-before-blocks":         [ 2, { "functions": "always", "keywords": "always" } ],
    "space-before-function-paren": [ 2, "never" ],
    "space-in-parens":             [ 2, "never" ],
    # "strict":                      [ 2, "function" ],
    "wrap-iife":                   [ 2, "outside" ],
    "spaced-comment":              2,
  },
  "env": {
    "node": true
  },
  "extends": "eslint:recommended"
}
